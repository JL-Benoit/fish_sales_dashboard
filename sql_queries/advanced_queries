-- Calculate the total revenue (sum of prix_total) generated by each commercial. Display the commercial's nom, prenom, and the total revenue, sorted highest to lowest.
SELECT
    c.commercial_id,
    c.prenom,
    c.nom,
    ROUND(SUM(cd.prix_total),2) AS total_revenue
FROM
    commercial AS c
INNER JOIN commande AS cmd ON c.commercial_id = cmd.commercial_id
INNER JOIN commande_detail AS cd ON cmd.commande_id = cd.commande_id 
GROUP BY
    c.prenom,
    c.nom,
    c.commercial_id 
ORDER BY
    total_revenue DESC; 

-- Identify the Top 5 selling sub-categories based on the total quantity (quantite) sold. Display the sub-categorie name and the total quantity.
SELECT 
    s.sous_categorie_id,
    s.sous_categorie,
    SUM(cd.quantite) AS total_quantite,
    ROUND(SUM(cd.prix_total),2) AS total_revenue
FROM sous_categorie AS s
INNER JOIN produit AS p ON p.sous_categorie_id = s.sous_categorie_id
INNER JOIN commande_detail AS cd ON cd.produit_id = p.produit_id
GROUP BY 
    s.sous_categorie_id,
    s.sous_categorie
ORDER BY
    total_quantite DESC;

-- Determine the average discount rate (average of remise) applied across all products sold in the database.
SELECT
    p.produit_id,
    p.nom_produit,
    ROUND(AVG(remise), 3) AS avg_remise
FROM
    commande_detail AS cd
INNER JOIN produit AS p ON p.produit_id = cd.produit_id
GROUP BY    
    p.produit_id,
    p.nom_produit
ORDER BY
    avg_remise DESC;

-- Find the region that generated the highest total sales volume (sum of prix_total).
SELECT
    r.region_id,
    r.region,
    ROUND(SUM(cd.prix_total),2) AS total_revenue
FROM
    region AS r
INNER JOIN commercial AS c ON c.region_id = r.region_id
INNER JOIN commande AS cmd ON c.commercial_id = cmd.commercial_id
INNER JOIN commande_detail AS cd ON cmd.commande_id = cd.commande_id 
GROUP BY
    r.region_id,
    r.region
ORDER BY
    total_revenue DESC; 

-- Calculate the number of unique products purchased by each client. Display the client_id and the product count.
SELECT 
    c.client_id,
    c.code_magasin,
    COUNT(cd.produit_id) AS count_produit
FROM client AS c
INNER JOIN commande AS cmd ON c.client_id = cmd.client_id
INNER JOIN commande_detail AS cd ON cmd.commande_id = cd.commande_id
INNER JOIN produit AS p ON cd.produit_id = p.produit_id
GROUP BY 
    c.client_id,
    c.code_magasin
ORDER BY 
    count_produit DESC;

-- Identify products (produit_id, nom_produit) that have never been ordered (commande_detail table). (Requires LEFT JOIN or NOT EXISTS).
SELECT
    p.produit_id,
    p.nom_produit,
    SUM(cd.quantite)
FROM produit AS p
LEFT JOIN commande_detail AS cd ON p.produit_id = cd.produit_id
GROUP BY
    p.produit_id,
    p.nom_produit
HAVING SUM(cd.quantite) IS NULL
ORDER BY
    p.produit_id;

--For products with a prix greater than 10, calculate the average quantity sold per order item (commande_detail).
SELECT  
    cd.produit_id,
    p.nom_produit,
    cd.prix_unitaire,
    ROUND(AVG(cd.quantite), 2) AS avg_quantite_sold
FROM commande_detail AS cd
INNER JOIN produit AS p ON cd.produit_id = p.produit_id
GROUP BY 
    cd.produit_id,
    p.nom_produit,
    cd.prix_unitaire
HAVING cd.prix_unitaire > 10
ORDER BY
    avg_quantite_sold DESC;

-- Find the commercial who has the lowest average order size (average prix_total per order).
WITH order_totals AS (
    SELECT
        commande_id,
        SUM(prix_total) AS order_total_value
    FROM
        commande_detail
    GROUP BY
        commande_id
)
SELECT
    c.commercial_id,
    c.prenom,
    c.nom,
    ROUND(AVG(ot.order_total_value), 2) AS avg_order_size
FROM
    commercial AS c
INNER JOIN commande AS cmd ON c.commercial_id = cmd.commercial_id
INNER JOIN order_totals AS ot ON cmd.commande_id = ot.commande_id
GROUP BY
    c.commercial_id,
    c.prenom,
    c.nom
ORDER BY
    avg_order_size ASC;

-- List the client_id and their associated code_magasin for all clients whose total spending is above the overall average spending per client.
WITH order_totals AS (
    SELECT
        commande_id,
        SUM(prix_total) AS order_total_value
    FROM
        commande_detail
    GROUP BY
        commande_id
),
client_sales_avg AS (
    SELECT
        c.client_id,
        c.code_magasin,
        AVG(ot.order_total_value) AS client_avg_spending 
    FROM
        client AS c
    INNER JOIN commande AS cmd ON c.client_id = cmd.client_id
    INNER JOIN order_totals AS ot ON cmd.commande_id = ot.commande_id
    GROUP BY
        c.client_id,
        c.code_magasin
)
SELECT
    csa.client_id,
    csa.code_magasin,
    ROUND(csa.client_avg_spending, 2) AS average_spending
FROM
    client_sales_avg AS csa
WHERE
    csa.client_avg_spending > (
        SELECT AVG(client_avg_spending)
        FROM client_sales_avg
    )
ORDER BY
    average_spending DESC;


/*Part 1: Multi-Table Joins and Advanced Filtering
Focus on combining 3 or more tables and filtering results based on criteria from different tables.*/

--List the product name (nom_produit), the category name (categorie), and the sub-category name (sous_categorie) for all products.
SELECT
    produit_id,
    nom_produit,
    categorie,
    sous_categorie
FROM produit
LEFT JOIN sous_categorie ON produit.sous_categorie_id = sous_categorie.sous_categorie_id
LEFT JOIN categorie ON sous_categorie.categorie_id = categorie.categorie_id;

--Find the nom and prenom of the commercial who sold the product named 'Cardinalis', and how much.
SELECT 
    commercial.nom,
    commercial.prenom,
    p.produit_id,
    p.nom_produit,
    SUM(cd.quantite) AS total_sold
FROM commercial
LEFT JOIN commande AS c ON commercial.commercial_id = c.commercial_id
LEFT JOIN commande_detail AS cd ON c.commande_id = cd.commande_id
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id
WHERE nom_produit LIKE '%ardinalis%'
GROUP BY 
    commercial.nom,
    commercial.prenom,
    p.produit_id,
    p.nom_produit
ORDER BY 
    total_sold DESC;

--Display the commande_id, the client_id, and the full name (nom and prenom) of the commercial responsible for the order.
SELECT 
    commande_id,
    client_id,
    nom,
    prenom
FROM commande
LEFT JOIN commercial ON commande.commercial_id = commercial.commercial_id;

--Find the nom_produit and the quantite sold for all orders placed by the client with the code_magasin of 'TRSTJO'.
SELECT 
    c.commande_id,
    cd.produit_id,
    p.nom_produit,
    cd.quantite
FROM commande_detail AS cd
LEFT JOIN commande AS c ON cd.commande_id = c.commande_id
LEFT JOIN client AS cl ON c.client_id = CL.client_id
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id;

--List all orders (commande_id) that contain at least one product with a price (prix) greater than 30.00.
SELECT 
    c.commande_id,
    client.code_magasin,
    cd.produit_id,
    p.nom_produit,
    cd.prix_unitaire
FROM commande AS c
LEFT JOIN commande_detail AS cd ON c.commande_id = cd.commande_id
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id
LEFT JOIN client ON c.client_id = client.client_id
WHERE cd.prix_unitaire > '30';

--Find the names of all products sold in the 'Sud' region & quantities sold.
SELECT
    p.produit_id,
    p.nom_produit,
    SUM(cd.quantite) AS total_sold,
    r.region
FROM produit AS p
LEFT JOIN commande_detail AS cd ON p.produit_id = cd.produit_id
LEFT JOIN commande AS c ON cd.commande_id = c.commande_id
LEFT JOIN client ON c.client_id = client.client_id
LEFT JOIN commercial ON client.commercial_id = commercial.commercial_id
LEFT JOIN region AS r ON commercial.region_id = r.region_id
WHERE region = 'Sud'
GROUP BY
    p.produit_id,
    p.nom_produit,
    r.region
ORDER BY
    p.produit_id ASC;

--Display the nom_produit and the quantite sold for all products that belong to the category 'Fish'.
SELECT
    p.produit_id,
    nom_produit,
    quantite,
    categorie
FROM produit AS p
LEFT JOIN sous_categorie ON p.sous_categorie_id = sous_categorie.sous_categorie_id
LEFT JOIN categorie ON sous_categorie.categorie_id = categorie.categorie_id
LEFT JOIN commande_detail ON p.produit_id = commande_detail.produit_id
WHERE categorie LIKE 'poissons'
ORDER BY
    p.produit_id ASC;

--List all products that have been sold, but were not sold in the quantity of exactly 8. 
SELECT
    p.produit_id,
    nom_produit,
    SUM(cd.quantite) AS total_sold
FROM commande_detail AS cd
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id
GROUP BY
    p.produit_id,
    nom_produit
HAVING 
    SUM(cd.quantite) <> 8
ORDER BY
    p.produit_id ASC;

--Find the names of all clients who have placed an order using the delivery type 'EXNA'.  
SELECT
    client_id,
    code_magasin,
    livraison
FROM client
LEFT JOIN livraison ON client.livraison_id = livraison.livraison_id
WHERE livraison = 'EXNA'
ORDER BY
    client_id ASC;



/*Part 2: Intermediate Aggregation and Grouping
Focus on using GROUP BY with multiple columns, and using the HAVING clause.*/

-- Calculate the total number of orders placed by each client_id, listing the client_id and the count.
SELECT
    client.client_id,
    code_magasin,
    COUNT(commande_id) AS number_orders
FROM client
LEFT JOIN commande ON client.client_id = commande.client_id
GROUP BY
    client.client_id,
    code_magasin
ORDER BY
    number_orders DESC;

--Find the total number of unique products sold by each commercial, listing the commercial's full name and the product count.
SELECT
    c.commercial_id,
    c.nom,
    c.prenom,
    COUNT(DISTINCT cd.produit_id) AS total_sold
FROM commercial AS c
LEFT JOIN client ON c.commercial_id = client.commercial_id
LEFT JOIN commande ON client.client_id = commande.client_id
LEFT JOIN commande_detail AS cd ON commande.commande_id = cd.commande_id
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id
GROUP BY
    c.commercial_id,
    c.nom,
    c.prenom
ORDER BY
    total_sold DESC;

--Determine the total revenue (sum of prix_total) generated by each region, listing the region name and the revenue.
SELECT
    r.region_id,
    r.region,
    ROUND(SUM(prix_total),2) AS revenu_region
FROM region AS r
LEFT JOIN commercial AS c ON r.region_id = c.region_id
LEFT JOIN client ON c.commercial_id = client.commercial_id
LEFT JOIN commande ON client.client_id = commande.client_id
LEFT JOIN commande_detail AS cd ON commande.commande_id = cd.commande_id
GROUP BY
    r.region_id,
    r.region
ORDER BY
    revenu_region DESC;

--List all sous_categorie names and the total quantity (quantite) sold for products in each sub-category.
SELECT
    sc.sous_categorie_id,
    sc.sous_categorie,
    SUM(quantite) AS total_sold
FROM sous_categorie AS sc
LEFT JOIN produit AS p ON sc.sous_categorie_id = p.sous_categorie_id
LEFT JOIN commande_detail AS cd ON p.produit_id = cd.produit_id
GROUP BY
    sc.sous_categorie_id,
    sc.sous_categorie
ORDER BY
    sc.sous_categorie_id ASC;

--Find the commande_id that contains the highest number of distinct products.
SELECT
    commande.commande_id,
    COUNT(DISTINCT cd.produit_id) AS order_count
FROM commande
LEFT JOIN commande_detail AS cd ON commande.commande_id = cd.commande_id
GROUP BY
    commande.commande_id 
ORDER BY 
    order_count DESC
LIMIT 1;

--Determine the average price (prix_total) of an order line item for each product (nom_produit). For a specific product, what is the typical total revenue earned from a single, individual entry in an order?
SELECT
    p.produit_id,
    p.nom_produit,
    ROUND(AVG(cd.prix_total),2) AS avg_prix_ligne
FROM commande_detail AS cd
LEFT JOIN produit AS p ON cd.produit_id = p.produit_id
GROUP BY
    p.produit_id,
    p.nom_produit
ORDER BY
    avg_prix_ligne DESC;

--List the categorie names that have generated a total revenue (prix_total) greater than 2000.00. (Requires HAVING).
SELECT
    categorie.categorie_id,
    categorie.categorie,
    ROUND(SUM(prix_total),2) AS total_revenue
FROM categorie
LEFT JOIN sous_categorie ON categorie.categorie_id = sous_categorie.categorie_id
LEFT JOIN produit ON sous_categorie.sous_categorie_id = produit.sous_categorie_id
LEFT JOIN commande_detail ON produit.produit_id = commande_detail.produit_id
GROUP BY
    categorie.categorie_id,
    categorie.categorie
HAVING 
    SUM(prix_total) > 2000
ORDER BY
    total_revenue DESC;

--Which product (nom_produit) has the highest average quantity (quantite) sold per order line item?
SELECT
    p.produit_id,
    p.nom_produit,
    ROUND(AVG(cd.quantite),2) AS avg_quantite_sold
FROM produit AS p
LEFT JOIN commande_detail AS cd ON p.produit_id = cd.produit_id
GROUP BY
    p.produit_id,
    p.nom_produit
HAVING ROUND(AVG(cd.quantite),2) IS NOT NULL
ORDER BY
    avg_quantite_sold DESC
    LIMIT 1;


/*Part 3: Subqueries, Filtering on Aggregates, and Conditional Logic
Focus on using subqueries for lookup and conditional logic for basic pivoting.*/

--Subquery: Find the nom_produit and prix for the product that has the single highest unit price in the entire database.
SELECT
    produit_id,
    nom_produit,
    prix
FROM produit
WHERE prix = (
    SELECT
        (MAX(prix))
    FROM produit
    )
;

--Subquery: List the commande_id and date_commande for all orders that were handled by the commercial who is assigned to the 'Sud' region.
SELECT
    cmd.commande_id,
    cmd.date_commande
FROM
    commande AS cmd
WHERE
    cmd.commercial_id IN (
        SELECT
            c.commercial_id
        FROM
            commercial AS c
        INNER JOIN region AS r ON c.region_id = r.region_id
        WHERE
            r.region = 'Sud'
    )
ORDER BY
    cmd.date_commande DESC;

